<?xml version="1.0" encoding="utf-8"?>
<android.support.design.circularreveal.cardview.CircularRevealCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        tools:targetApi="lollipop">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dp"
                                                      android:layout_height="30dp"
                                                      android:layout_margin="16dp"
                                                      app:srcCompat="@drawable/ic_gallery"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp"
                                                      android:id="@+id/appCompatImageView_gallery"
                                                      android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageView android:layout_width="30dp"
                                                      android:layout_height="30dp"
                                                      android:id="@+id/appCompatImageView_folder"
                                                      app:srcCompat="@drawable/ic_round_folder_open_24px"
                                                      app:layout_constraintStart_toStartOf="@+id/appCompatImageView_gallery"
                                                      app:layout_constraintEnd_toEndOf="@+id/appCompatImageView_gallery"
                                                      android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toBottomOf="@+id/appCompatImageView_gallery"/>
        <TextView
                android:text="Select from gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView_gallery"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView_gallery"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView_gallery" android:layout_marginStart="8dp"/>
        <TextView
                android:text="select from file manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView_folder"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView_folder"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView_folder" android:layout_marginStart="8dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.design.circularreveal.cardview.CircularRevealCardView>